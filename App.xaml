<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:TradiesToolbox.Converters"
             x:Class="TradiesToolbox.App">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
            <converters:JobStatusToColorConverter x:Key="JobStatusToColorConverter" />
            <converters:QuoteStatusToColorConverter x:Key="QuoteStatusToColorConverter" />
            <converters:AmountToColorConverter x:Key="AmountToColorConverter" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:CurrencyConverter x:Key="CurrencyConverter" />
            <converters:RelativeDateConverter x:Key="RelativeDateConverter" />

            <!-- Include global styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/GlobalStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>