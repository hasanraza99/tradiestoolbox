<!-- GlobalStyles.xaml - Shared styles for the application -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Color definitions based on the Tradies Toolbox logo -->
    <Color x:Key="PrimaryColor">#BF4D11</Color>
    <!-- Toolbox rust/terracotta color -->
    <Color x:Key="PrimaryDarkColor">#8C3A0D</Color>
    <!-- Darker rust shade -->
    <Color x:Key="AccentColor">#E5A553</Color>
    <!-- Logo background amber/orange -->
    <Color x:Key="BackgroundColor">#FCFAF5</Color>
    <!-- Off-white with warm undertone -->
    <Color x:Key="TextColor">#111111</Color>
    <!-- Near black text -->
    <Color x:Key="TextSecondaryColor">#7D3109</Color>
    <!-- Darker rust for secondary text -->
    <Color x:Key="BorderColor">#E0D5C1</Color>
    <!-- Light amber/beige border -->
    <Color x:Key="SurfaceColor">White</Color>
    <!-- Pure white for cards/surfaces -->

    <!-- Status & alert colors with logo-inspired tones -->
    <Color x:Key="SuccessColor">#4D9E6A</Color>
    <!-- Green with amber undertone -->
    <Color x:Key="WarningColor">#F0B541</Color>
    <!-- Brighter amber -->
    <Color x:Key="DangerColor">#D83B01</Color>
    <!-- Brighter rust/orange for alerts -->

    <!-- Button styles -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="BorderColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15,10" />
    </Style>

    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="TextColor" Value="#111111" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource DangerColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Frame styles -->
    <Style x:Key="CardFrame" TargetType="Frame">
        <Setter Property="Padding" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="BorderColor" Value="{StaticResource BorderColor}" />
    </Style>

    <Style x:Key="AccentFrame" TargetType="Frame">
        <Setter Property="Padding" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
    </Style>

    <Style x:Key="PrimaryFrame" TargetType="Frame">
        <Setter Property="Padding" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <!-- Text styles -->
    <Style x:Key="PageTitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <Style x:Key="SectionTitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style x:Key="FieldLabelStyle" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>

    <Style x:Key="AccentText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource AccentColor}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="PrimaryText" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Form and Input styles -->
    <Style x:Key="FormEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="PlaceholderColor" Value="#AAAAAA" />
    </Style>

    <Style x:Key="FormPickerStyle" TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        <Setter Property="TextColor" Value="{StaticResource TextColor}" />
        <Setter Property="TitleColor" Value="#AAAAAA" />
    </Style>
</ResourceDictionary>