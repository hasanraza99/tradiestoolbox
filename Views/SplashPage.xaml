<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradiesToolbox.Views.SplashPage"
             BackgroundColor="#BF4011">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">

        <!-- Application Logo -->
        <Image Source="logo.png" HeightRequest="200" WidthRequest="200" />

        <!-- Loading Indicator -->
        <ActivityIndicator IsRunning="True" Color="White" />

    </StackLayout>

</ContentPage>
