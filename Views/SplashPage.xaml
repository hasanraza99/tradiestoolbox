<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TradiesToolbox.Views.SplashPage"
             BackgroundColor="{StaticResource PrimaryColor}">

    <!-- Main layout with gradient background -->
    <Grid>
        <!-- Create a subtle gradient effect -->
        <BoxView BackgroundColor="{StaticResource PrimaryDarkColor}"
                 Opacity="0.7"
                 HeightRequest="300"
                 VerticalOptions="End"/>

        <!-- Logo and elements -->
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="30">
            <!-- Application Logo - remove animation for now -->
            <Image Source="logo.png" 
                   HeightRequest="180" 
                   WidthRequest="180" />

            <!-- App Name with stylized text -->
            <Label Text="TRADIES TOOLBOX"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- App tagline -->
            <Label Text="Manage Your Business With Ease"
                   FontSize="18"
                   TextColor="White"
                   Opacity="0.9"
                   HorizontalOptions="Center" />

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="True" 
                               Color="White"
                               HeightRequest="50"
                               WidthRequest="50" />
        </StackLayout>
    </Grid>
</ContentPage>