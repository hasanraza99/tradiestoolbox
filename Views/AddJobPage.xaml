<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TradiesToolbox.ViewModels"
             xmlns:models="clr-namespace:TradiesToolbox.Models"
             x:Class="TradiesToolbox.Views.AddJobPage"
             Title="Add Job">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <!-- Job Title -->
            <Label Text="Job Title" FontAttributes="Bold" />
            <Entry Placeholder="Enter job title" Text="{Binding Job.Title}" />

            <!-- Description -->
            <Label Text="Description" FontAttributes="Bold" />
            <Editor Placeholder="Enter job description" Text="{Binding Job.Description}" HeightRequest="80" />

            <!-- Location -->
            <Label Text="Location" FontAttributes="Bold" />
            <Entry Placeholder="Enter job location" Text="{Binding Job.Location}" />

            <!-- Scheduled Date -->
            <Label Text="Scheduled Date" FontAttributes="Bold" />
            <DatePicker Date="{Binding Job.ScheduledDate}" />

            <!-- Duration -->
            <Label Text="Duration (Hours:Minutes)" FontAttributes="Bold" />
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="10">
                <Entry Grid.Column="0" Placeholder="Hours" Keyboard="Numeric" Text="{Binding DurationHours}" />
                <Entry Grid.Column="1" Placeholder="Minutes" Keyboard="Numeric" Text="{Binding DurationMinutes}" />
            </Grid>

            <!-- Status -->
            <Label Text="Job Status" FontAttributes="Bold" />
            <Picker ItemsSource="{Binding AvailableStatuses}"
                    SelectedItem="{Binding SelectedStatus}" />

            <!-- Estimated Cost -->
            <Label Text="Estimated Cost (Â£)" FontAttributes="Bold" />
            <Entry Placeholder="0.00" Keyboard="Numeric" Text="{Binding Job.EstimatedCost}" />

            <!-- Notes -->
            <Label Text="Notes" FontAttributes="Bold" />
            <Editor Placeholder="Enter additional notes" Text="{Binding Job.Notes}" HeightRequest="80" />

            <!-- Save and Cancel Buttons -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="Save" Command="{Binding SaveJobCommand}" BackgroundColor="#3E5C76" TextColor="White" />
                <Button Text="Cancel" Command="{Binding CancelCommand}" BackgroundColor="Gray" TextColor="White" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
