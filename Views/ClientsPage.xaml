<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TradiesToolbox.ViewModels"
             x:Class="TradiesToolbox.Views.ClientsPage"
             Title="{Binding Title}">

    <!-- Main layout grid with search and list sections -->
    <Grid RowDefinitions="Auto,*">
        <!-- Search Bar and Add Client Button -->
        <Grid ColumnDefinitions="*,Auto" Padding="20,10">
            <Frame Grid.Column="0" 
                   Padding="15,0" 
                   CornerRadius="8" 
                   BorderColor="LightGray"
                   HasShadow="False">
                <Grid ColumnDefinitions="Auto,*">
                    <!-- Search Icon -->
                    <Image Source="search.png" 
                           WidthRequest="20" 
                           HeightRequest="20"
                           VerticalOptions="Center"
                           Margin="0,0,10,0"/>
                    <!-- Search Entry Field -->
                    <Entry Grid.Column="1"
                           Placeholder="Search clients"
                           Text="{Binding SearchText}"
                           ReturnCommand="{Binding SearchCommand}"
                           VerticalOptions="Center"
                           ClearButtonVisibility="WhileEditing"/>
                </Grid>
            </Frame>

            <!-- Add Client Button -->
            <Button Grid.Column="1"
                    Text="+"
                    FontSize="18"
                    FontAttributes="Bold"
                    Command="{Binding AddClientCommand}"
                    BackgroundColor="#3E5C76"
                    TextColor="White"
                    CornerRadius="8"
                    WidthRequest="40"
                    HeightRequest="40"
                    Padding="0"
                    Margin="10,0,0,0"/>
        </Grid>

        <!-- Clients List with Pull-to-Refresh -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Clients}"
                            SelectionMode="Single"
                            SelectionChangedCommand="{Binding ClientSelectedCommand}"
                            SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">

                <!-- Empty View when no clients are found -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Image Source="no_clients.png" 
                               HeightRequest="100" 
                               Opacity="0.5"
                               Margin="0,0,0,20"/>
                        <Label Text="No clients found" 
                               FontSize="18"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                        <Label Text="Add your first client to get started"
                               FontSize="14"
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <!-- Template for each Client Item -->
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <!-- Swipe to Delete -->
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                              BackgroundColor="Red"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ClientsViewModel}}, Path=DeleteClientCommand}"
                                              CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- Client Info Card -->
                            <Frame Margin="20,10"
                                   Padding="15"
                                   HasShadow="True"
                                   CornerRadius="10">
                                <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                    <!-- Client Name -->
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>

                                    <!-- Active/Inactive Status -->
                                    <Frame Grid.Column="1"
                                           Padding="8,3"
                                           CornerRadius="10"
                                           BackgroundColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"
                                           HasShadow="False">
                                        <Label Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}"
                                               TextColor="White"
                                               FontSize="12"
                                               FontAttributes="Bold"/>
                                    </Frame>

                                    <!-- Contact Info -->
                                    <StackLayout Grid.Row="1" Orientation="Horizontal" Spacing="15" Margin="0,5,0,0">
                                        <Label Text="{Binding Phone}"
                                               TextColor="Gray"/>
                                        <Label Text="|"
                                               TextColor="LightGray"/>
                                        <Label Text="{Binding Email}"
                                               TextColor="Gray"/>
                                    </StackLayout>

                                    <!-- Address -->
                                    <Label Grid.Row="2"
                                           Text="{Binding Address}"
                                           TextColor="Gray"
                                           FontSize="14"
                                           Margin="0,5,0,0"/>

                                    <!-- Navigation Indicator -->
                                    <Image Grid.Row="1"
                                           Grid.Column="1"
                                           Grid.RowSpan="2"
                                           Source="chevron_right.png"
                                           WidthRequest="20"
                                           HeightRequest="20"
                                           VerticalOptions="Center"
                                           HorizontalOptions="End"
                                           Opacity="0.5"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
